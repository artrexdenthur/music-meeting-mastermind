<%= form_for(singer) do |f| %>
  <p><%= f.label :name %></p>
  <p><%= f.text_field :name %></p>
  <br>
  <p><%= f.label :preferred_voice_part %></p>
  <p><%= f.text_field :preferred_voice_part %></p>
  <br>
  <h5><p>Choruses: </p></h5>
      <%= f.fields_for :memberships do |mem_f| %>
    <div class="card">
      <div class="card-content">
        <span class="card-title"><%= mem_f.collection_select :chorus_id, Chorus.all, :id, :name, {include_blank: true, prompt: 'Select chorus'}, {class: 'browser-default'} %></span>
        <%= render 'parts', membership_form: mem_f %>
      </div>
    </div>
      <% end %>
  <%= f.submit %>
<% end %>
